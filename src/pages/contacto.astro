---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---
<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="¡Conectemos!" />

  <ContactUs
    id="form"
    title="Envíanos un mensaje hoy"
    subtitle="Para respuestas más rápidas, explora nuestra sección de Preguntas Frecuentes. ¡Puede que encuentres la solución que buscas allí! Si no, nuestro equipo de soporte estará encantado de ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo Electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, reconoces y aceptas la recopilación de tu información personal.',
    }}
    description="Nuestro equipo de soporte normalmente responde dentro de las 24 horas hábiles."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="¡Estamos aquí para ayudar!"
    items={[
      {
        title: 'Soporte general',
        description: `Contáctanos para consultas relacionadas con la gestión de cuentas, navegación en el sitio web, problemas de pago, acceso a servicios adquiridos o preguntas generales sobre la funcionalidad del sitio.`,
        icon: 'tabler:headset',
      },
      {
        title: 'Contactar ventas',
        description:
          'Contáctanos para preguntas sobre compras, opciones de personalización, licencias para uso comercial, consultas sobre servicios específicos, etc.',
        icon: 'tabler:mail',
      },
      {
        title: 'Soporte técnico',
        description:
          'Contáctanos cuando enfrentes problemas como instalación de servicios, dificultades con la edición, problemas de compatibilidad con el software o errores de descarga, u otros desafíos técnicos relacionados con el uso de nuestros servicios.',
        icon: 'tabler:headset',
      },
      {
        title: 'Teléfono',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo Electrónico',
        description: 'info@six-cg.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Carrera 11 #138-48, Apto 805, Bogotá, Colombia',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
