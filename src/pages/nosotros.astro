---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Nosotros',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Acerca de Nosotros"
    image={{
      src: '/images/six-cg-logo.png', // Reemplaza con la ruta de la imagen sin fondo de SIX CG
      alt: 'SIX CG Logo',
    }}
  >
    <Fragment slot="title">
      Ayudamos a los líderes de TI a <br />
      <span class="text-accent dark:text-white highlight"> Tener Éxito</span>
    </Fragment>

    <Fragment slot="subtitle">
      Nuestra misión es "Ayudar a los Líderes de TI a tener éxito" entregándoles resultados significativos y duraderos y transfiriéndoles conocimientos, prácticas y experiencia de valor.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Sobre nosotros en cifras"
    stats={[
      { title: 'Años de experiencia', amount: '20+' },
      { title: 'Certificaciones', amount: '12' },
      { title: 'Clientes satisfechos', amount: '100+' },
      { title: 'Proyectos completados', amount: '500+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Nuestros Servicios"
    subtitle="Ofrecemos una amplia gama de servicios en la gestión de proyectos y servicios de TI."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Consultoría en Procesos',
        description:
          'Ofrecemos consultoría especializada en procesos de negocio y TI, asegurando la optimización y eficiencia.',
        icon: 'tabler:globe',
      },
      {
        title: 'Gestión de Proyectos',
        description:
          'Gestionamos proyectos complejos con metodologías ágiles y certificaciones internacionales.',
        icon: 'tabler:globe',
      },
      {
        title: 'Soluciones ITIL',
        description:
          'Implementamos y gestionamos servicios de TI bajo los estándares ITIL para asegurar la calidad y eficiencia.',
        icon: 'tabler:globe',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Capacitación',
        description:
          'Brindamos capacitación en diversas áreas, incluyendo ITIL, PMP, CBCP, CISA y más.',
        icon: 'tabler:globe',
      },
      {
        title: 'Coaching Organizacional',
        description:
          'Facilitamos procesos de cambio organizacional con técnicas de coaching certificadas.',
        icon: 'tabler:globe',
      },
      {
        title: 'Auditorías de TI',
        description:
          'Realizamos auditorías exhaustivas de sistemas y procesos para garantizar la seguridad y eficiencia.',
        icon: 'tabler:globe',
      },
      {
        title: 'Soluciones MS Project',
        description:
          'Implementamos y gestionamos Microsoft Project Server y SharePoint para una mejor colaboración y gestión de proyectos.',
        icon: 'tabler:globe',
      },
      {
        title: 'Continuidad del Negocio',
        description:
          'Desarrollamos planes de continuidad del negocio para asegurar la resiliencia y recuperación ante desastres.',
        icon: 'tabler:globe',
      },
      {
        title: 'Soporte Técnico',
        description:
          'Ofrecemos soporte técnico especializado para resolver cualquier problema de TI de manera eficiente.',
        icon: 'tabler:globe',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Image representing our services',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Nuestros Valores"
    subtitle="Los valores que nos guían en nuestra misión de ayudar a los líderes de TI a tener éxito."
    items={[
      {
        title: 'Trabajo en Equipo',
        description:
          'Promovemos un ambiente colaborativo y de apoyo mutuo para alcanzar objetivos comunes.',
        icon: 'tabler:globe',
      },
      {
        title: 'Mejora Continua',
        description:
          'Nos mantenemos actualizados y buscamos constantemente nuevas formas de mejorar nuestros servicios.',
        icon: 'tabler:globe',
      },
      {
        title: 'Prácticas Éticas',
        description:
          'Actuamos con integridad y transparencia en todas nuestras relaciones y proyectos.',
        icon: 'tabler:globe',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Logros"
    subtitle="Nuestros principales logros y reconocimientos en la industria."
    isReversed={true}
    callToAction={{
      text: 'Ver más',
      href: '/logros',
    }}
    items={[
      {
        title: 'Alcance Global',
        description: 'Hemos expandido nuestros servicios a múltiples países en Latinoamérica y el Caribe.',
        icon: 'tabler:globe',
      },
      {
        title: 'Comentarios Positivos',
        description:
          'Recibimos continuamente feedback positivo de nuestros clientes, destacando nuestra calidad y eficiencia.',
        icon: 'tabler:globe',
      },
      {
        title: 'Premios y Reconocimientos',
        description:
          'Hemos sido reconocidos como expertos en la industria y hemos recibido varios premios por nuestra excelencia.',
        icon: 'tabler:globe',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Nuestras Ubicaciones"
    tagline="Encuéntranos"
    columns={4}
    items={[
      {
        title: 'Colombia',
        description: 'Carrera 11 #138-48, Apto 805, Bogotá',
        icon: 'tabler:globe',
      },
      {
        title: 'Venezuela',
        description: 'Av. Francisco de Miranda, Torre Europa, Caracas',
        icon: 'tabler:globe',
      },
      {
        title: 'Latinoamérica',
        description: 'Oficinas en diversos países de Latinoamérica y el Caribe.',
        icon: 'tabler:globe',
      },
      {
        title: 'Online',
        description: 'Atención y servicios remotos disponibles en cualquier lugar.',
        icon: 'tabler:globe',
      },
    ]}
  />

</Layout>
